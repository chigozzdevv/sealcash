# Server
PORT=3000
NODE_ENV=development
CLIENT_URL=http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/sealcash

# Auth
AUTH_SECRET=your-secret-key-min-32-chars-long

# Charms attestation signer key
ATTESTATION_KEY=your-attestation-signer-key

# Blockchain RPCs (for cross-chain verification)
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_KEY
BNB_RPC_URL=https://bsc-dataseed.binance.org/
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SUI_RPC_URL=https://fullnode.mainnet.sui.io:443

# Bitcoin RPC (for transaction broadcasting)
# Required for broadcasting Charms spells to Bitcoin network
# Uses testnet4 by default - configure your Bitcoin Core node
BITCOIN_RPC_URL=http://localhost:18332
BITCOIN_RPC_USER=your-rpc-user
BITCOIN_RPC_PASSWORD=your-rpc-password
BITCOIN_NETWORK=testnet4

# Charms Protocol
# Prover API endpoint (default: https://v8.charms.dev/spells/prove)
CHARMS_PROVER_API=https://v8.charms.dev/spells/prove
# App verification key - get this by running: cd charms && charms app vk $(charms app build)
CHARMS_APP_VK=ef713cb169105cca61dafddd982ffb8e61d41f33eeb767ab5e2e724f0031bb0b
